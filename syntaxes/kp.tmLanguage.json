{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "KeyPoint",
	"patterns": [
		{
			"include": "#operators"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#blocks"
		},
		{
			"include": "#blockprops"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"attribute-interior": {
			"patterns": [
				{
					"begin": "=",
					"beginCaptures": {
						"0": {
							"name": "punctuation.separator.key-value.kp"
						}
					},
					"end": "\\s|\\]"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator",
					"match": "="
				}
			]
		},
		"blockprops": {
			"patterns": [
				{
					"begin": "(background|transition|align|valign|font|font-size|font-color|offset|width|height|path)(?:=)",
					"beginCaptures": {
						"0": {
							"name": "entity.other.attribute-name.kp"
						}
					},
					"comment": "Block property name capture",
					"end": "(?=[^=\\s])",
					"patterns": [
						{
							"include": "#attribute-interior"
						}
					]

				},
				{
					"begin": "(?<=\\=)([a-zA-Z0-9\\-,%]+)",
					"beginCaptures": {
						"0": {
							"name": "constant.character.escape.kp"
						}
					},
					"end": "(?:\\s|\\])"
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line",
				"begin": "#",
				"beginCaptures": {
					"0": {
						"name": "punctuation.definition.comment.kp"
					}
				},
				"end": "\\r?\\n"
			}]
		},

		"blocks": {
			"patterns": [{
				"name": "entity.name.type.kp",
				"match": "^\\[(slide|style|image|video)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.kp",
				"match": "\\b(if|while|for|return)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.kp",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.kp",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.kp"
}